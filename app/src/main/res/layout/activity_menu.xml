<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MenuActivity.MenuActivity">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.831"
            app:layout_constraintVertical_bias="0.025"/>
    <Button
            android:text="LOGOUT"
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/logoutButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="124dp"
            app:layout_constraintHorizontal_bias="0.842" android:onClick="button"/>
    <TextView
            android:text="TextView"
            android:layout_width="227dp"
            android:layout_height="89dp" android:id="@+id/userDetails"
            app:layout_constraintEnd_toEndOf="@+id/profile_image" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.232" app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image" app:layout_constraintVertical_bias="0.0"
            android:fontFamily="sans-serif-black" android:textSize="14sp" android:textColor="#CAC3C3"/>
    <Button
            android:text="ADD NEW TRAINING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/toAddTrainingActivity"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.12"
            android:layout_marginBottom="400dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>