<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExercisesActivity.TrainingActivity" android:background="@color/background">

    <TextView
            android:text="New training"
            android:layout_width="187dp"
            android:layout_height="50dp" android:id="@+id/exerciseNameView"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="86dp" android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintHorizontal_bias="0.764"
            app:layout_constraintBottom_toTopOf="@+id/RepeatView"/>
    <Button
            android:text="Add exercise"
            android:layout_width="140dp"
            android:layout_height="64dp" android:id="@+id/addTrainingButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" android:layout_marginEnd="139dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/seriesTextEdit"
            android:onClick="goToExerciseActivity" android:visibility="gone"/>
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/trainingDateCalendar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.491" app:layout_constraintVertical_bias="0.33"/>
</androidx.constraintlayout.widget.ConstraintLayout>