<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background"
        tools:context=".ExercicesActivity.PopUpAddExerciceActivity">

    <TextView
            android:text="Series"
            android:layout_width="116dp"
            android:layout_height="57dp" android:id="@+id/SeriesView"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="208dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextSeriesNumber2" android:layout_marginEnd="13dp"/>
    <TextView
            android:text="Repeat"
            android:layout_width="116dp"
            android:layout_height="54dp" android:id="@+id/RepeatView"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editTextRepeatNumber" android:layout_marginEnd="13dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/SeriesView"/>
    <TextView
            android:text="Exercise name"
            android:layout_width="221dp"
            android:layout_height="53dp" android:id="@+id/ExerciseNameView"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="86dp" android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/RepeatView"/>
    <Button
            android:text="Add exercise"
            android:layout_width="140dp"
            android:layout_height="64dp" android:id="@+id/AddExerciceButton2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" android:layout_marginEnd="139dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintHorizontal_bias="0.442"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextSeriesNumber2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextRepeatNumber"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ExerciseNameView" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSeriesNumber2" android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/RepeatView" android:layout_marginTop="70dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextSeriesNumber2"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/AddExerciceButton2" android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/SeriesView" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextRepeatNumber" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>